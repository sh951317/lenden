pipeline {
    agent any
    environment {
        DEPLOYMENT_BRANCH = 'deploy' // Your deployment branch name
        MASTER_BRANCH = 'master' // Your master branch name
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the deployment branch
                git branch: "${DEPLOYMENT_BRANCH}", url: 'https://your-repo-url.git'
            }
        }
        stage('Build and Deploy') {
            when {
                branch DEPLOYMENT_BRANCH
            }
            steps {
                // Your build and deployment steps
                echo 'Building and Deploying the application...'
                // Example: sh 'deploy_script.sh'
            }
        }
        stage('Merge to Master') {
            steps {
                script {
                    // Configure Git with your credentials
                    sh 'git config user.email "your-email@example.com"'
                    sh 'git config user.name "Your Name"'
                    
                    // Checkout the master branch
                    sh "git checkout ${MASTER_BRANCH}"
                    
                    // Merge the deployment branch into the master branch
                    sh "git merge ${DEPLOYMENT_BRANCH}"
                    
                    // Push the changes to the master branch
                    withCredentials([usernamePassword(credentialsId: 'your-credentials-id', usernameVariable: 'GIT_USERNAME', passwordVariable: 'GIT_PASSWORD')]) {
                        sh 'git push https://${GIT_USERNAME}:${GIT_PASSWORD}@your-repo-url.git ${MASTER_BRANCH}'
                    }
                }
            }
        }
    }
}